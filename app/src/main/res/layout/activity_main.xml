<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@mipmap/dl"
    >


    <EditText
        android:drawableLeft="@mipmap/phone1"
        android:id="@+id/login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="160dp"
        android:textColorHint="#ffffff"
        />



        <EditText
            android:id="@+id/login_pswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="36dp"
            android:drawableLeft="@mipmap/lock"
            android:hint="登录密码"
            android:password="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="18sp"
            android:drawableRight="@mipmap/login_icon_eye_n_xxhdpi"
            />






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">
        <CheckBox
            android:id="@+id/chec_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:textColor="#ffffff"
            android:layout_marginLeft="36dp"
            />
        <TextView
            android:id="@+id/login_zc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="快速注册"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/chec_box"
            android:textColor="#ffffff"
            android:layout_marginRight="36dp"
            />
    </RelativeLayout>
    <Button
        android:background="@drawable/shape_ufo_dl"
        android:id="@+id/login_lgbt"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:textColor="#ff5f71"
        android:layout_height="50dp"
        android:text="登录"
        android:layout_marginTop="130dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/img_pro"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>





</LinearLayout>